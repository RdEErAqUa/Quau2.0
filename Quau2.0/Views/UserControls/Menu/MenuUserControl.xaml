<UserControl x:Class="Quau2._0.Views.UserControls.Menu.MenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quau2._0.Views.UserControls.Menu"
             xmlns:vm="clr-namespace:Quau2._0.ViewModels.MenuViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MenuViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Додати дані" Command="{Binding ReadDataFromFile}" CommandParameter="0"/>
                <MenuItem Header="Додати одновимірні дані із файлу" Command="{Binding ReadDataFromFile}" CommandParameter="1"/>
                <MenuItem Header="Додати двовимирні дані із файлу" Command="{Binding ReadDataFromFile}" CommandParameter="2"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
